{
  "$schema": "https://raw.githubusercontent.com/microsoft/vcpkg-tool/main/docs/vcpkg.schema.json",
  "name": "stoneydsp",
  "version": "0.0.0",
  "homepage": "https://stoneydsp.com",
  "maintainers": [
    "Nathan J. Hood <nathanjhood@googlemail.com>"
  ],
  "license": "MIT",
  "supports": "!android & !uwp",
  "dependencies": [
    {
      "name": "alsa",
      "platform": "linux"
    },
    {
      "name": "vcpkg-cmake",
      "host": true
    },
    {
      "name": "vcpkg-cmake-config",
      "host": true
    },
    {
      "name": "vcpkg-tool-nodejs",
			"host": true
    },
    {
      "name": "cmakerc"
    },
    {
      "name": "openssl"
    },
    {
      "name": "curl",
			"features": [
        "ssl"
      ]
    },
		{
			"name": "freetype"
		},
		{
			"name": "libx11"
		},
		{
			"name": "libxcomposite"
		},
		{
			"name": "libxext"
		},
		{
			"name": "libxinerama"
		},
		{
			"name": "libxrender"
		},
		{
			"name": "libxrandr"
		},
		{
			"name": "node-addon-api"
		},
		{
			"name": "node-api-headers"
		},
    {
      "name": "juce",
			"host": true,
      "features": [
				"curl",
				"extras",
				"freetype",
				"jack",
				"ladspa",
				"opengl",
				"web-browser",
				"xcursor",
				"xinerama",
				"xrandr",
				"xrender"
      ]
    }
  ]
}
